{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "outDir": "./dist", 
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,  
    "inlineSourceMap": false,
    "removeComments": false,
    "lib": ["ES2016", "DOM"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}